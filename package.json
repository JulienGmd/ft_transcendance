{
	"name": "ft-transcendence",
	"version": "1.0.0",
	"description": "ft_transcendence - A modern Pong game with microservices architecture",
	"private": true,
	"workspaces": [
		"backend/services/*",
		"frontend",
		"shared"
	],
	"scripts": {
		"dev": "npm run dev --workspaces",
		"build": "npm run build --workspaces",
		"start": "npm run start --workspaces",
		"test": "npm test --workspaces",
		"clean": "npm run clean --workspaces && rm -rf node_modules",
		"install-all": "npm install",
		"dev:gateway": "npm run dev -w gateway-service",
		"dev:frontend": "npm run dev -w frontend",
		"build:shared": "npm run build -w @ft-transcendence/shared"
	},
	"devDependencies": {
		"typescript": "^5.9.2",
		"concurrently": "^8.2.2"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0"
	}
}