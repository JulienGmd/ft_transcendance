{
  "name": "frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "tsc --project tsconfig.client.json",
    "start": "node dist/server/_index.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server/_index.ts",
    "dev:client": "tsc --project tsconfig.client.json --watch"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "concurrently": "^9.2.1",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "fastify": "^5.6.1"
  }
}
