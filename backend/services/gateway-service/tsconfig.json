{
  "compilerOptions": {
    "rootDir": "./src", // ← Garder src comme rootDir
    "outDir": "./dist",
    "baseUrl": "./src", // ← baseUrl à la racine du projet
    "paths": {
      "@shared/*": [
        "shared/*"
      ], // ← Chemin vers shared depuis la racine
      "@config/*": [
        "config/*"
      ] // ← Chemin vers config depuis la racine
    },
    "module": "esnext",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}